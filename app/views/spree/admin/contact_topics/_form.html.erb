<div data-hook="admin_contact_topic_form_fields" class="row">
  <div class="alpha four columns">
    <%= f.field_container :name do %>
      <%= f.label :name, t(:name) %>
      <%= f.text_field :name, :class => 'fullwidth' %>
    <% end %>
  </div>

  <div class="eight columns omega">
    <%= f.field_container :emails do %>
      <%= f.label :emails, t(:emails) %> <small>comma seperated</small>
      <%= f.text_field :emails, :class => 'fullwidth' %>
    <% end %>
  </div>
</div>